<%= link_to 'New Habit', new_habit_path, class: "text-blue-500" %>
<h1 class="text-xl font-bold mb-4">Your Habits</h1>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @habits.each do |habit| %>
    <div class="p-4 border rounded-lg shadow-md bg-white">
      <h2 class="text-lg font-semibold"><%= habit.name %></h2>
      <p><%= habit.description %></p>
      <p>Streak: <%= habit.current_streak %> | Consistency: <%= habit.consistency_percentage %>%</p>
      <%= link_to "View", habit_path(habit), class: "text-blue-500" %>
    </div>
  <% end %>
</div>

